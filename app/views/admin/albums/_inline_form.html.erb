<%= semantic_form_for album, multipart: true, :url => admin_album_path(:id => album.id), :class => "nobottommargin", :method => :put, :html => { :multipart => true } do |f| %>
  <%= f.inputs do %>
    <%= f.input :multi_images, :as => :file, :label => false, :input_html => {:multiple => true} %>
    <%= f.input :id, :as => :hidden, :value => album.id %>
  <% end %>  

  <%= f.action :submit, :as => :input, :label => "Pievienot", :button_html =>{:class => "button button-3d button-black nomargin", :id => "register-form-submit"} %>
<% end %>      


