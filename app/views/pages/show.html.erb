<% if @current_page %>
  <% case @current_page.html_page %>
    <% when 1 %>
      <%= render :partial => "templates/home" %> 
    <% when 2 %>
      <%= render :partial => "templates/empty_page" %>   
     <% when 3 %>
      <%= render :partial => "templates/about_us" %> 
     <% when 4 %>
      <%= render :partial => "templates/rulles" %>    
     <% when 5 %>
      <%= render :partial => "templates/donations" %>      
    <% when 6 %>
      <%= render :partial => "templates/members" %>        
    <% when 7 %>
      <%= render :partial => "templates/contacts" %>        
        

  <% end %>
<% end %> 
